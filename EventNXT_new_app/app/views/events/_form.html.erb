<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :datetime, style: "display: block" %>
    <%= form.datetime_field :datetime %>
  </div>
  
  
  <!--===================-->
  <!--to add upload field-->
  <div>
    <%= form.label :event_avatar, style: "display: block" %>
    <%= form.file_field :event_avatar %>
  </div>
  
  <div>
    <%= form.label :event_box_office, style: "display: block" %>
    <%= form.file_field :event_box_office %>
  </div>
  <!--===================-->
  
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
